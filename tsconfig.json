{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./src",
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "module": "esnext",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2018",
      "dom"
    ],
    "paths": {
      "@modules/*": ["./app/modules/*"],
      "@constants": ["./app/core/constants"],
      "@shared/*": ["./app/shared/*"],
      "@interfaces/*": ["./app/shared/models/interfaces/*"],
      "@services/*": ["./app/core/services/*"],
      "@validators/*": ["./app/core/validators/*"],
      "@environments/*": ["./environments/*"],
      "@guards/*": ["./app/core/guards/*"],
    }
  }
}
